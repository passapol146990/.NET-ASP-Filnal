@using Microsoft.AspNetCore.Http

<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container-fluid">
        <!-- Brand Logo -->
        <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="" asp-action="Index">
            <i class="fas fa-users me-2 fa-lg"></i>
            <span>User Management</span>
        </a>

        <!-- Mobile Toggle Button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar Content -->
        <div class="collapse navbar-collapse" id="navbarContent">
            <!-- Left Menu - แสดงเมนูเมื่อ Login แล้ว -->
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                           asp-controller="Users" asp-action="Index">
                            <i class="fas fa-home me-1"></i>หน้าแรก
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")"
                           asp-controller="Users" asp-action="Create">
                            <i class="fas fa-user-plus me-1"></i>เพิ่มผู้ใช้
                        </a>
                    </li>
                </ul>
            }

            <!-- Right Menu -->
            <ul class="navbar-nav ms-auto">
                <!-- User Menu / Authentication -->
                @if (User.Identity.IsAuthenticated)
                {
                    <!-- ถ้า Login แล้ว -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                            <div class="navbar-user-info">
                                <span class="d-none d-md-inline">@User.Identity.Name</span>
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <div class="dropdown-header">
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <h6 class="mb-0">@User.Identity.Name</h6>
                                            <small class="text-muted">ผู้ใช้งานระบบ</small>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="dropdown-item text-danger border-0 bg-transparent w-100 text-start">
                                        <i class="fas fa-sign-out-alt me-2"></i>ออกจากระบบ
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <!-- ถ้ายังไม่ Login -->
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-light btn-sm me-2"
                           asp-controller="Account"
                           asp-action="Login">
                            <i class="fas fa-sign-in-alt me-1"></i>เข้าสู่ระบบ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-light btn-sm text-primary"
                           asp-controller="Account"
                           asp-action="Register">
                            <i class="fas fa-user-plus me-1"></i>สมัครสมาชิก
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<!-- Breadcrumb - แสดงเมื่อ Login แล้ว -->
@if (User.Identity.IsAuthenticated)
{
    <div class="bg-light border-bottom">
        <div class="container-fluid">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 py-2">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                            <i class="fas fa-home"></i>
                        </a>
                    </li>
                    @if (ViewContext.RouteData.Values["Controller"]?.ToString() != "Home")
                    {
                        <li class="breadcrumb-item">
                            <a asp-controller="@ViewContext.RouteData.Values["Controller"]"
                               asp-action="Index" class="text-decoration-none">
                                @ViewContext.RouteData.Values["Controller"]
                            </a>
                        </li>
                    }
                    @if (ViewContext.RouteData.Values["Action"]?.ToString() != "Index")
                    {
                        <li class="breadcrumb-item active">
                            @ViewContext.RouteData.Values["Action"]
                        </li>
                    }
                </ol>
            </nav>
        </div>
    </div>
}

<style>
    .navbar {
        padding: 0.5rem 0;
    }

    .navbar-brand {
        font-size: 1.5rem;
    }

    .nav-link {
        font-weight: 500;
        padding: 0.5rem 1rem !important;
        border-radius: 0.375rem;
        margin: 0 0.125rem;
        transition: all 0.3s ease;
    }

        .nav-link:hover, .nav-link.active {
            background-color: rgba(255, 255, 255, 0.1);
            transform: translateY(-1px);
        }

    .nav-search .form-control {
        border: 1px solid rgba(255, 255, 255, 0.2);
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
    }

        .nav-search .form-control::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .nav-search .form-control:focus {
            background-color: rgba(255, 255, 255, 0.15);
            border-color: rgba(255, 255, 255, 0.4);
            color: white;
            box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.1);
        }

    .navbar-user-info {
        display: flex;
        align-items: center;
    }

    .dropdown-menu {
        border: none;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        border-radius: 0.5rem;
    }

    .breadcrumb {
        font-size: 0.875rem;
    }

    .badge {
        font-size: 0.6rem;
        padding: 0.25em 0.4em;
    }

    .btn-outline-light:hover {
        background-color: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.5);
    }

    @@media (max-width: 991.98px) {
        .nav-search {
            margin: 0.5rem 0;
        }

        .navbar-nav .nav-item {
            margin: 0.125rem 0;
        }

        .navbar-nav .btn {
            margin: 0.25rem 0;
            width: 100%;
            text-align: center;
        }
    }
</style>